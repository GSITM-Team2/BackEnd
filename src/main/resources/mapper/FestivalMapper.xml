<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="gsitm.teamproject.domain.festival.FestivalMapper">
    <select id="findAllPaginated" resultType="gsitm.teamproject.dto.FestivalListResponseDto">
        SELECT
            id,
            main_img,
            title,
            date,
            place
        FROM festival
        ORDER BY id
            LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="getTotalCount" resultType="long">
        SELECT COUNT(*) FROM festival
    </select>

    <select id="findAllByFilter" resultType="gsitm.teamproject.dto.FestivalListResponseDto">
        SELECT
        title,
        date,
        place,
        main_img,
        id
        FROM festival

        <where> <!--여기서부터는 MyBatis가 조건에따라 순수SQL로 바꿔주는부분임.-->
            <if test="codename != null">
                <!--               컬럼이름        변수이름-->
                and code_name = #{codename}
            </if>
            <if test="guname != null">
                and guname = #{guname}
            </if>
        </where>

    </select>
    <select id="findById" resultType="gsitm.teamproject.dto.FestivalDetailResponse">
        SELECT
        id,
        use_fee,
        guname,
        main_img,
        date,
        title,
        code_name,
        user_trgt,
        place,
        org_link
        FROM festival
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
        </where>
    </select>
</mapper>


